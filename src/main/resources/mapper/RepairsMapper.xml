<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admin.apartment.mapper.RepairsMapper">

    <!--  查询报修表信息  -->
    <select id="selectRepairsByInfo" parameterType="com.admin.apartment.entity.Repairs" resultType="com.admin.apartment.entity.Repairs">
        select * from repairs
        <where>
            1=1
            <if test="t.id != 0">
                and id=#{t.id}
            </if>
            <if test="t.status != null">
                and status=#{t.status}
            </if>
            <if test="t.has_file != null">
                and has_file=#{t.hasFile}
            </if>
        </where>
    </select>

    <!--  模糊查询报修表信息  -->
    <select id="selectRepairsByLike" parameterType="com.admin.apartment.entity.Repairs" resultType="com.admin.apartment.entity.Repairs">
        select * from repairs
        <where>
            1=1
            <if test="t.status != null">
                and status=#{t.status}
            </if>
            <if test="t.has_file != null">
                and has_file=#{t.hasFile}
            </if>
            <if test="t.createTimeBefore != null">
                <![CDATA[and create_time <= #{t.createTimeBefore} ]]>
            </if>
            <if test="t.createTimeAfter != null">
                <![CDATA[and create_time >= #{t.createTimeAfter} ]]>
            </if>

            <if test="t.conductTimeBefore != null">
                <![CDATA[and conduct_time <= #{t.conductTimeBefore} ]]>
            </if>
            <if test="t.conductTimeAfter != null">
                <![CDATA[and conduct_time >= #{t.conductTimeAfter} ]]>
            </if>
        </where>
    </select>
</mapper>
