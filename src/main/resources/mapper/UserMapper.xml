<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admin.apartment.mapper.UserMapper">

<!--  查询租户信息  -->
    <select id="selectUserByInfo" parameterType="com.admin.apartment.entity.User" resultType="com.admin.apartment.entity.User">
        select * from apartment_user
        <where>
            1=1
            <if test="t.id != 0">
                and id=#{t.id}
            </if>
            <if test="t.name != null">
                and name=#{t.name}
            </if>
            <if test="t.sex != null">
                and sex=#{t.sex}
            </if>
            <if test="t.phone != null">
                and phone=#{t.phone}
            </if>
            <if test="t.idNumber != null">
                and id_number=#{t.idNumber}
            </if>
            <if test="t.idType != null">
                and id_type=#{t.idType}
            </if>
            <if test="t.isLive != null">
                and is_live=#{t.isLive}
            </if>
        </where>
    </select>

<!--  模糊查询租户信息  -->
    <select id="selectUserByLike" parameterType="com.admin.apartment.entity.User" resultType="com.admin.apartment.entity.User">
        select * from apartment_user
        <where>
            1=1
            <if test="t.name != null">
                and name like '%'||#{t.name}||'%'
            </if>
            <if test="t.sex != null">
                and sex=#{sex}
            </if>
            <if test="t.phone != null">
                and phone like '%'||#{t.phone}||'%'
            </if>
            <if test="t.id_number != null">
                and id_number like '%'||#{t.idNumber}||'%'
            </if>
            <if test="t.id_type != null">
                and id_type like '%'||#{t.idType}||'%'
            </if>
            <if test="t.id_live != null">
                and id_live like '%'||#{t.idLive}||'%'
            </if>
        </where>
    </select>

</mapper>
